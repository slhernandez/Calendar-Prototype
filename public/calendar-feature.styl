@import './common'
@import './calendar-bgimg'

calendarf-toggle = 'data:image/png;base64,'

*, *:after, *:before
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box

.calendar-feature
  margin 15px 0
  .calendar-f
    margin 0 auto
    -webkit-box-shadow 0 2px 5px rgba(0, 0, 0, 0.2)
    -moz-box-shadow 0 2px 5px rgba(0, 0, 0, 0.2)
    box-shadow 0 2px 5px rgba(0, 0, 0, 0.2)
    .prev
      float left
    .next
      float right
    caption
        font-size font-size-16
        font-weight 400
        text-align center
        padding 10px 0
        border-left 1px solid #CCC
        border-right 1px solid #CCC
        border-top 1px solid #CCC
        span 
          background url(calendarf-toggle) 50% 50% no-repeat
          background-size 10px
          cursor pointer
          width 20px 
          height 20px
          &:hover
            opacity 0.6
        span.prev
          -webkit-transform rotate(180deg)
          -moz-transform rotate(180deg)
          transform rotate(180deg)
          margin-left 5px
        span.next
          margin-right 5px
      thead
        tr
          display none
          th
            font-weight 600
            padding-top 10px
            text-transform uppercase
      th,
      td
        border-left 1px solid #CCC
        border-top 1px solid #CCC
        text-align center
        height 40px
        width 40px
        &:last-child
          border-right 1px solid #CCC
      td.select
        background #777
        color white
        font-weight 600
      td.off
        color #b3b3b3
  .cal-list
    -webkit-box-shadow 0 2px 5px rgba(0, 0, 0, 0.2)
    -moz-box-shadow 0 2px 5px rgba(0, 0, 0, 0.2)
    box-shadow 0 2px 5px rgba(0, 0, 0, 0.2)
    border 1px solid #CCC
    margin 0 auto
    padding 0 0 10px 0 
    width 280px 
    ul
      li.list-date
        background #e6e6e6
        -webkit-box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.15), 0 1px 0 white
        -moz-box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.15), 0 1px 0 white
        box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.15), 0 1px 0 white
        color #777
        font-size 110%
        font-weight 600
        padding 5px 0 5px 10px
      li.cal-item
        p.time
          color #999
          padding 5px 0 0px 10px
        p.cal-description
          color #777
          font-weight 600
          padding 0 0 5px 10px

      
