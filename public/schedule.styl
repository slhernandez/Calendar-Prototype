@import './common'

.blockText
  margin 40px auto
  width 90%
  h2 
    color #333
    font-weight 900
    font-size 150%
    margin-bottom 10px

  p 
    font-size 120%

  h3
    background #333
    color #FAFAFA
    padding 5px 0
    margin 20px 0

    a
      color #FAFAFA
      font-size 110%
      font-weight 600
      padding 5px 0 5px 25px
      text-decoration none
      &:hover
        color #4999CF

    span
      font-size 110%
      font-weight 600
      padding-left 5px

  .scheduleTable
    background #EEE
    border 1px solid #CCC
    padding 15px 10px 10px 25px
    width 100% 
    .time
      padding-right 15% 
      width 18%
    .days
      width 80%

  .enrollBtn
    margin-top 15px
    .button
      background #333
      color #FAFAFA
      padding 8px
      rounded-corners(5px)
      text-decoration none
      &:hover
        background #3B3B3B



.scheduleContainer
  margin 0 auto
  width 90%
  h2
    color #333
    font-weight 600
    font-size 150%
    margin-bottom 10px
  .scheduleDescription 
    font-size 120%
    margin-bottom 20px

  .scheduleItems
    li
      .scheduleHeading
        background #333
        font-size 120%
        padding-top 15px
        padding-bottom 15px
        clearfix()
        .location
          color white
          font-weight 600
          float left
          padding-left 25px
      .scheduleDetails
        margin-top 10px
        .plus-icon
          background url(plus-icon) 50% 50% no-repeat
          background-color #EEE
          cursor pointer
          background-size 8px
          border 1px solid #CCC
          rounded-corners(2px)
          opacity 0.7
          height 15px
          width 16px
          float left
          margin-right 10px
          &:hover
            background-color #CCC
        .scheduleTable
          background #EEE
          border 1px solid #CCC
          padding 15px 10px 10px 25px
          margin 10px auto 20px auto
          width 94% 
          .time
            font-size 120%
            padding-right 15% 
            width 18%
          .days
            width 80%
        .enrollBtn
          margin-top 15px
          margin-left 25px
          margin-bottom 20px 
          .button
            background #333
            color #FAFAFA
            padding 8px
            rounded-corners(5px)
            text-decoration none
            &:hover
              background #3B3B3B



            
        


