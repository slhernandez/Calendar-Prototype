@import './common'
@import './calendar-bgimg'

*, *:after, *:before 
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box


[class*='col-']
  float none
  padding-right 20px

[class*='col-']:last-of-type
  padding-right 0

.col-2-3 
  width 100%

.col-1-2 
  width 100%

.col-1-3
  width 100% 

.col-1-4 
  width 100%

.col-1-8
  width 100% 

.cal-grid:after,
.grid:after
  content ""
  display table
  clear both
  width 100%

.grid-pad
  padding 0

.container
  margin 0 auto

.calendar-container
  display none
.cal-heading
  display none

.agenda
  font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
  .midsize-calendar
    display none
  .mobile-week
    background white
    font-family light-family
    top 0
    left 0
    width 100% 
    z-index 13
    &.fixed
      position fixed
      top 0
    .mobile-heading
      font-size 150%
      background #333
      color white
      padding 10px 0
      text-align center
    .week-wrap
      overflow-x scroll
      overflow-y hidden
      white-space nowrap
      -webkit-overflow-scrolling touch
      ul.week
        clearfix()
        width 100%
        li
          background -webkit-linear-gradient(top, white 0%, #F4F4F4 100%)
          border-right: 1px solid #CCC;
          display inline-block
          float none
          text-align center
          width 20% 
          .mobile-day
            color #999
            font-weight 400
            font-size 120%
            padding-top 10px
            text-transform uppercase
          .mobile-date
            font-size 150%
            font-weight 200
            padding 15px 0 25px 0
          &:last-child
            border-right none
          &:first-child
            border-right none
        .focus
          //box-shadow 5px 3px 5px rgba(0, 0, 0, 0.3)
          border none
          .mobile-day
            background #333
            padding-top 10px
            color white
          .mobile-date
            font-size 155%
            background #333
            color white
            text-shadow -1px -1px 1px #24292B
  h1
    display none
    font-weight 600
    font-size 150%
    border-bottom 1px solid #CCC
    padding-bottom 15px
    margin-top 140px
  ul.agenda-items
    padding 20px 20px
    li.item-date,
    li.agenda-item
      border-bottom 1px solid #ccc
      cursor pointer
    li.item-date
      background #333
      color #FAFAFA
      font-size 110%
      font-weight 600
      padding 5px 0 5px 25px 
      span.full-date
        float right
        margin-right 20px
    li.select
      //color #FF4949
    li.agenda-item
      font-size 100%
      font-weight 400
      padding 10px 0 10px 0
      margin-left 0
      margin-bottom 0
      .minus-icon
        background url(minus-icon) 50% 50% no-repeat
        background-color #EEE
        background-size 8px
        cursor pointer
        border 1px solid #CCC
        rounded-corners(2px)
        opacity 0.7
        height 15px
        width 16px
        float left
        margin-right 10px
        &:hover
          background-color #CCC
      .plus-icon
        background url(plus-icon) 50% 50% no-repeat
        background-color #EEE
        cursor pointer
        background-size 8px
        border 1px solid #CCC
        rounded-corners(2px)
        opacity 0.7
        height 15px
        width 16px
        float left
        margin-right 10px
        &:hover
          background-color #CCC
      .agenda-time
        float right
        margin-right 20px
      .expandItem
        display none
        margin 20px auto 0px auto
        width 95%
        p 
          color #777
          font-weight 600
          margin-bottom 5px
          //width 30%
          width 200px
          span
            float right
            color #333
            text-align left
            &.time
              margin-right 10px
        .notes-label
          margin-top 20px
        .notes
          font-weight 400
          padding-right 30px
          width 100%
    li:last-child
      margin-bottom 25px

