  .more-btn
    text-decoration none
    font-size 120%
    rounded-corners(4px)
    padding 5px 5px 5px 5px 
    background #333
    font-weight 600
    color #FAFAFA
    display block
    margin 0 auto
    text-align center
    width 75px
    -webkit-box-shadow 0 1px 1px rgba(0, 0, 0, 0.15)
    -moz-box-shadow 0 1px 1px rgba(0, 0, 0, 0.15)
    box-shadow 0 1px 1px rgba(0, 0, 0, 0.15)
    &:hover
      background whitesmoke
      border 1px solid #333
      color #333
      -webkit-transition all .3s ease-out
      -moz-transition all .3s ease-out
      transition all .3s ease-out
    &:active
      position relative
      top 1px

//-----------------------------------------------------------
// apply for _every_ viewport >= 569px (until overridden)
//-----------------------------------------------------------
@media only screen and (min-width: 568px)
  .grid-pad
    padding 0 0 0 0
  .mobile-week
    display none
  .agenda
    .midsize-calendar
      background white
      display block
      margin 0 auto
      width 95%
      z-index 11
      .calendar
        margin 20px auto
        line-height 1.25em
        border-collapse collapse
        border-spacing 0
        width 100%
        caption
          //border-bottom 2px solid #333
          //border-top 2px solid #333
          border-top 1px solid #CCC
          border-right 1px solid #CCC
          border-left 1px solid #CCC
          border-bottom 1px solid #CCC
          font-size 185%
          padding-top 13px
          position relative
          text-align center
          span
            background url(midsize-cal-arrow) 50% 50% no-repeat
            background-size 30px
            cursor pointer
            height 30px
            position relative
            top -6px
            width 55px 
          span.next
            background url(midsize-cal-arrow) 50% 50% no-repeat
            background-size 30px
            float right
            -webkit-transform rotate(180deg)
            -moz-transform rotate(180deg)
            transform rotate(180deg)
            &:hover
              opacity 0.6
          span.prev
            float left
            &:hover
              opacity 0.6
        thead
          tr
            display table-row
            th
              border-bottom 1px solid #CCC
              border-left 1px solid #CCC
              display table-cell !important
              margin 0
              width 14.2857%
              //padding .8166em .4166em 1.8166em .4166em
              padding-bottom .8166em
              padding-top .8166em
              vertical-align top
              text-align center
              text-transform uppercase
              &:last-child
                border-right 1px solid #CCC
        tbody
          tr
            display table-row
            &:last-child
              border-bottom none
            td
              border 1px solid #CCC
              cursor pointer
              display table-cell !important
              margin 0
              width 14.2857%
              padding 0.4166em
              vertical-align top
              text-align right
              height 6.25em
              position relative
              &:hover
                background #FAFAFA
              .day
                display block
                float right
                margin 0
                font-weight normal
                margin-top 10px
                margin-right 5px
              .agenda-mark 
                border-color transparent transparent #1F1F1F
                border-style solid
                border-width 16px
                height 0 
                width 0
                position absolute
                top -16px
                left -16px
                -webkit-transform rotate(315deg)
                -moz-transform rotate(315deg)
                -o-transform rotate(315deg)
                transform rotate(315deg)

              span.occupied
                background rgba(73, 153, 207, 1.0)
                position absolute
                color #FFFFFF
                cursor pointer
                top 0px
                right 0px
                height 4.25em
                width 54.286%
            td.select
              background #EEE
            td.off
              color #777
            td.highlight:after
              content ""
              position absolute
              z-index 11
              top 0
              left 20px
              right 0 
              bottom 20px
              background rgba(73,153, 207, 0.7)
              color white
    ul.agenda-items
      margin 20px auto 0 auto
      width 95%
    h1
      display none

//-----------------------------------------------------------
// apply for _every_ viewport >= 1024px (until overridden)
//-----------------------------------------------------------
@media only screen and (min-width: 1024px)

  .grid
    border-top 1px solid #CCC

  .grid-pad
    padding 0 0 0 20px


  .agenda .midsize-calendar
    display none
    .midsize-calendar
      top 232px !important

  [class*='col-']
    float left
    padding-right 20px

  [class*='col-']:last-of-type
    padding-right 25px

  .col-2-3 
    width 66.66%

  .col-1-2 
    width 50%

  .col-1-3
    width 33.33%

  .col-1-4 
    width 25%

  .col-1-8
    width 12.5%

  .agenda
    border-left 1px solid #CCC
    padding-left 30px
    .mobile-week
      display none
    h1 
      display block
      margin-top 0

  .cal-heading
    display block
    margin-top 20px
    h1
      font-size 200%
      font-weight 200
      text-align center
      border-top 1px solid #CCC
      border-bottom 1px solid #CCC
      padding-top 20px
      padding-bottom 20px

  .calendar-container
    display block
    .calendar
      margin 29px auto 0 auto
      .prev
        float left
      .next
        float right
      caption
        font-size font-size-16
        font-weight 400
        text-align center
        padding 10px 0
        border-bottom 1px solid #CCC
        border-top 1px solid #CCC
        span 
          background url(calendar-nav-arrow) 50% 50% no-repeat
          background-size 20px
          cursor pointer
          width 20px 
          height 20px
          &:hover
            opacity 0.6
        span.prev
          -webkit-transform rotate(180deg)
          -moz-transform rotate(180deg)
          transform rotate(180deg)
          margin-left 5px
        span.next
          margin-right 5px
      thead
        tr
          th
            font-weight 600
            padding-top 10px
            text-transform uppercase
      th,
      td
        text-align center
        height 35px
        width 35px
      td.off
        color #b3b3b3
      td.select
        border 2px solid #ff4949
        rounded-corners(200px)
  .agenda
    ul.agenda-items
      margin 30px auto 0 auto

  
